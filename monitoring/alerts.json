    ],
    "notificationChannels": ["projects/sarvajaya-genesis-protocol/notification-channels/email"],
    "alertStrategy": {
      "autoClose": "1800s"
    }
  },
  {
    "displayName": "Email Delivery Failures",
    "conditions": [
