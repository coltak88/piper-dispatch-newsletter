  {
    "displayName": "SSL Certificate Expiry",
    "conditions": [
      {
        "displayName": "SSL certificate expires in 30 days",
        "conditionThreshold": {
          "filter": "metric.type=\"custom.googleapis.com/ssl/certificate_expiry_days\" resource.type=\"cloud_run_revision\" resource.label.\"service_name\"=\"piper-dispatch-main\"",
          "comparison": "COMPARISON_LT",
          "thresholdValue": 30,
          "duration": "3600s",
          "aggregations": [
            {
              "alignmentPeriod": "3600s",
              "perSeriesAligner": "ALIGN_MEAN"
            }
          ]
        }
      }
    ],
    "notificationChannels": ["projects/sarvajaya-genesis-protocol/notification-channels/email"],
    "alertStrategy": {
      "autoClose": "86400s"
    }
  }
]